---
import Clock from "./react/Clock";

const pathname = new URL(Astro.request.url).pathname;

const tabs = [
  { href: "/", icon: " ", padding: "pl-[1px]" },
  { href: "/readme/", icon: " ", padding: "pl-1" },
  { href: "/mit-license/", icon: " " }
];
---

<nav class="flex justify-center w-full border px-2 lg:w-full lg:grid lg:grid-cols-2">
  <ul class="hidden lg:flex">
    {
      tabs.map(tab => (
        <li class={"w-[26px] flex justify-center " + (pathname === tab.href ? "bg-white text-black" : "")}>
          <a class={"w-[18px] " + tab.padding} rel="prefetch" href={tab.href}>
            {tab.icon}
          </a>
        </li>
      ))
    }
  </ul>

  <div class="text-end">
    <Clock client:only="react" />
  </div>
</nav>
